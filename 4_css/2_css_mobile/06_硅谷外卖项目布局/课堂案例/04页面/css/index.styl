@import "variable.styl"
@import "mixins.styl"
@import "reset.styl"

#app
  height 100%
  #content
    position relative
    height 100%
   .page
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      padding 45px 0 50px
      box-sizing border-box
      display none
      &.active
        display block
      header
        position fixed
        top 0
        left 0
        right 0
        padding 0 20px
        height 45px
        background $primary-color
        display flex
        justify-content space-between
        align-items center
        color #fff
        .search
          font-size 25px
        .address
          width 188px
          font-size 20px
          white-space nowrap
          overflow hidden
          text-overflow ellipsis
        a
          color #fff
          font-size 15px
      .swiper-container
        height 200px
        .swiper-pagination-bullet-active
          background $primary-color
        .swiper-item
          display flex
          flex-wrap wrap
          a
            height 72px
            width 25%
            display flex
            flex-direction column
            align-items center
            justify-content space-between
            img
              width 50px
              height 50px
            span
              font-size 13px
              color #666


      .starts-rating
        margin 20px
        display flex
        .starts
          display flex
          span
            margin-right 3px
            width 10px
            height 10px
            image-bg('../images/stars/star_off', '.png')
            background-size 100% 100%
            &.on
              image-bg('../images/stars/star_on', '.png')
            &.half
              image-bg('../images/stars/star_half', '.png')
        .rating
          font-size 12px
          color #f60


  #footer
    border-1px(#7e8c8d, top)
    position fixed
    left 0
    bottom 0
    width 100%
    height 50px
    color #7e8c8d
    display flex
    .footer-item
      width 25%
      display flex
      flex-direction column
      align-items center
      &.active
        color $primary-color
      .iconfont
        font-size 22px
        margin 5px 0
      .footer-item-text
        font-size 12px

